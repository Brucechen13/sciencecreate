<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:showDividers="none"
    android:gravity="center_horizontal"
    android:weightSum="1">

    <TextView android:text="@string/app_name" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/List_Item"
        android:layout_marginTop="@dimen/list_padding"
        android:id="@+id/textview" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/pic_height"
        android:id="@+id/imageView2"
        android:background="@mipmap/animal"
        android:layout_marginBottom="@dimen/header_height"
        android:layout_marginTop="@dimen/header_height" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_title"
            android:id="@+id/button"
            android:layout_gravity="center"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="0.46">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/world_protection"
                android:id="@+id/button2"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/list_padding"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/little_known"
                android:id="@+id/button3"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/list_padding"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
